package bank.management.system;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.sql.*;

public class BalanceEnquiry extends JFrame implements ActionListener {
    
    JButton cancel;
    String pinNumber;
    
    BalanceEnquiry(String pinNumber){
       
       this.pinNumber = pinNumber;
       setLayout(null);
       
       
       ImageIcon i1 = new ImageIcon(ClassLoader.getSystemResource("icon/atm.jpg"));
       Image i2 = i1.getImage().getScaledInstance(900, 870, Image.SCALE_DEFAULT);
       ImageIcon i3 = new ImageIcon(i2);
       JLabel image = new JLabel(i3);
       image.setBounds(0,0,900,870);
       add(image);
       
        
        Conn conn = new Conn();
        int balance = 0;
                    try{
                    ResultSet rs = conn.s1.executeQuery("select * from bank where pin_number = '"+pinNumber+"'");
                    while(rs.next()){
                       if(rs.getString("type").equals("Deposit")){
                           balance += Integer.parseInt(rs.getString("amount"));
                     }else{ 
                         balance -= Integer.parseInt(rs.getString("amount"));
                       }
                  
                  }
                 }catch(Exception e){
                      System.out.println(e);
             }
                    
       JLabel text = new JLabel("Your Current Account balance is Rs " + balance);
       text.setForeground(Color.WHITE);
       text.setFont(new Font("System", Font.BOLD, 16));
       text.setBounds(165,340,500,20);
       image.add(text);
       
       JLabel text1 = new JLabel("Thank You!");
       text1.setForeground(Color.WHITE);
       text1.setFont(new Font("System", Font.BOLD, 16));
       text1.setBounds(290,475,100,20);
       image.add(text1);
       
       cancel = new JButton("");
       cancel.setBounds(460, 774, 90, 20);
       cancel.setBackground(Color.RED);
       cancel.setOpaque(false);
       cancel.addActionListener(this);
       image.add(cancel);
       
       setSize(900,870);
       setLocation(300,0);
       setUndecorated(true);
       setVisible(true);
    }
    
    public void actionPerformed(ActionEvent ae){
        setVisible(false);
        new Transaction(pinNumber).setVisible(true);
    }
    
    public static void main (String[] args){
        
         new BalanceEnquiry("");
    }
    
}
